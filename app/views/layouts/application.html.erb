<!DOCTYPE html>
<html>
<head>
  <title>Blocmetrics</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">

    <div class="flash">
      <% if flash[:notice] %>
        <div class="alert alert-success"><%= notice %></div>
      <% elsif flash[:alert] %>
        <div class="alert alert-warning"><%= alert %></div>
      <% end %>
    </div>

    <ul class="nav nav-tabs">

      <li><%= link_to "Home", root_path %></li>
      <li><%= link_to "About", about_path %></li>

      <% if user_signed_in? %>
        <div class="pull-right user-info">
          <%= gravatar_url(current_user, 35) %>
          <div class="pull-right">
            <%= link_to current_user.username, edit_user_registration_path, :class => 'navbar-link' %> <br/>
            <%= link_to "Sign Out", destroy_user_session_path, method: :delete, :class => 'navbar-link' %>
          </div>
        </div>
      <% else %>
        <li class="pull-right"><%= link_to "Sign Up", new_user_registration_path %></li>
        <li class="pull-right"><%= link_to "Sign In", new_user_session_path %><li>
      <% end %>

    </ul>

    <%= yield %>

  </div>


</body>
</html>
