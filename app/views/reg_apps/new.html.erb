<h1>Register a new Application</h1>

<div class="row">
  <div class="col-md-8">

    <%= form_for [current_user, @reg_app] do |f| %>

      <%= form_group_tag(@reg_app.errors[:name]) do %>
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', placeholder: "Enter App Name" %>
      <% end %>

      <%= form_group_tag(@reg_app.errors[:url]) do %>
        <%= f.label :url %>
        <%= f.text_field :url, class: 'form-control', placeholder: "Enter App URL" %>
      <% end %>

      <%= f.submit "Save", class: 'btn btn-success' %>

    <% end %>

  </div>
</div>
